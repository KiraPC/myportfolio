# Environment variables for Vercel deployment
# Copy this file to .env.local and set your values

# Email Configuration
EMAIL_HOST=smtp.mail.me.com
EMAIL_PORT=587
EMAIL_USER=your-email@icloud.com
EMAIL_PASSWORD=your-app-specific-password

# Umami Analytics Configuration
PUBLIC_UMAMI_WEBSITE_ID=your-website-id
PUBLIC_UMAMI_SRC=https://your-umami-instance.com/script.js
PUBLIC_UMAMI_DOMAINS=your-domain.com

# Optional: Analytics or tracking IDs
# VERCEL_ANALYTICS_ID=your_analytics_id

# Optional: Contact form endpoint
# CONTACT_FORM_ENDPOINT=your_form_endpoint

# Default locale (it or en)
DEFAULT_LOCALE=it
